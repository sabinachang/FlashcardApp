<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/primaryColor"/>

    <item android:top="180dp"
        android:bottom="-180dp"
        android:left="0dp"
        android:right="-180dp"
        >
        <rotate
            android:fromDegrees="-12"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="oval">


                <solid android:color="@color/colorAccent">
                </solid>

            </shape>
        </rotate>
    </item>
</layer-list>