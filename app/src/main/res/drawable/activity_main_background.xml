<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/secondaryColorDark"/>
    <item
        android:right="-50dp"
        android:left="-150dp"
        android:top="390dp"
        android:bottom="-200dp">
        <rotate
            android:fromDegrees="-18"
            android:pivotX="20%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <solid android:color="@color/secondaryColorDarkAlpha">
                </solid>
            </shape>
        </rotate>
    </item>

    <item
        android:right="-50dp"
        android:left="-150dp"
        android:top="500dp"
        android:bottom="-200dp">
        <rotate
            android:fromDegrees="-18"
            android:pivotX="20%"
            android:pivotY="0%">
            <shape
                android:shape="rectangle">
                <solid android:color="@color/colorAccentDarkAlpha">
                </solid>
            </shape>
        </rotate>
    </item>
</layer-list>