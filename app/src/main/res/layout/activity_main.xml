<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <!--<com.mikhaellopez.circularimageview.CircularImageView-->
        <!--android:layout_width="125dp"-->
        <!--android:layout_height="125dp"-->

        <!--app:civ_border_color=""-->
        <!--app:civ_border_width="5dp" />-->


        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColorAlpha"
            android:textSize="28sp"
            tools:text="Good morning!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="44dp"
            android:text="Keep up the good work!"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColorAlpha"
            android:textSize="14sp"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:gravity="center"
        android:orientation="vertical">

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="25dp"
            fancy:fb_borderColor="@color/primaryColor"

            fancy:fb_defaultColor="@color/primaryColorApha"
            fancy:fb_iconPaddingRight="14dp"


            fancy:fb_iconPaddingTop="12dp"
            fancy:fb_iconResource="@drawable/ic_photo_camera_dark"
            fancy:fb_radius="8dp"
            fancy:fb_text="@string/create_new_word"
            fancy:fb_textColor="@color/primaryTextColorAlpha"
            fancy:fb_textGravity="right"
            fancy:fb_textSize="19sp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            fancy:fb_borderColor="@color/primaryColor"


            fancy:fb_defaultColor="@color/primaryColorApha"
            fancy:fb_iconPaddingRight="18dp"
            fancy:fb_iconPaddingTop="12dp"

            fancy:fb_iconResource="@drawable/ic_book"
            fancy:fb_radius="8dp"
            fancy:fb_text="@string/review_word"
            fancy:fb_textColor="@color/primaryTextColorAlpha"
            fancy:fb_textSize="19sp" />

    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="24dp"
        app:theme="@style/TransparentBar">

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:fontFamily="sans-serif-light"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="About"-->
            <!--android:textSize="24sp" />-->
    </android.support.v7.widget.Toolbar>



</RelativeLayout>